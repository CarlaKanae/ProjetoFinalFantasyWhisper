<body>

<form method="POST" action="/historias">
  <div class="container-body">
  <h2 class="card-header w3-text-white w3-purple w3-center">Nova Historia</h2><br></br>
    <label class="w3-cursive" for="titulo">Titulo</label>
      <input 
        type="text" 
        name="titulo" 
        class="form-control" 
        id="titulo" 
        placeholder="Digite o titulo" 
        required>
      </input>

    <label class="w3-cursive" for="capitulo">Capitulo</label>
      <input 
        type="text" 
        name="capitulo" 
        class="form-control" 
        id="capitulo" 
        placeholder="Digite o capitulo" 
        required>
      </input>

    <label class="w3-cursive" for="conteudo">Conteudo</label>
      <input 
        type="text" 
        name="conteudo" 
        class="form-control" 
        id="conteudo" 
        placeholder="Digite a historia" 
        rows="3" 
        required>
    </input>

    <div class="form-floating mb-3">
      <label class="w3-cursive" for="autorId">Selecione o autor</label>
        <select 
          class="form-control" 
          name="autorId" 
          id="autorId">
            <% autores.forEach(autor => { %>
                <option value="<%= autor.id %>"><%= autor.nome %></option>
            <%})%>
        </select>
      </div>

      <div class="form-floating mb-3">
      <label class="w3-cursive" for="generoId">Selecione o genero</label>
        <select 
          class="form-control" 
          name="generoId" 
          id="generoId">
            <% generos.forEach(genero => { %>
                <option value="<%= genero.id %>"><%= genero.genero %></option>
            <%})%>
        </select>
      </div>

      <div class="form-floating mb-3">
        <button 
          type="submit" 
          class="btn btn-primary w3-round-xxlarge">Salvar
        </button>
        <a href="/historias" class="btn btn-warning w3-round-xxlarge">Cancelar</a>
        <h1><br></h1>
      </div>
    </form>
  </div>

<footer style="position: fixed; bottom: 0; width: 100%; text-align: center;">
